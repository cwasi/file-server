extends baseEmail

block content
    p Hi #{firstName},
    p Your File Server password can be reset by clicking the button below. If you did not request a new password, please ignore the email.

    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset your password
