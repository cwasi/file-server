extends base

mixin navItem(link, text, icon, alt, active)
    li.side-nav__item(class=`${active ? 'side-nav__item--active' : ''}`)
        a.side-nav__link(href=`${link}`)
            img.side-nav__icon(src=`/icon/${icon}` alt=`${alt}`)
            span #{text}

block content
    // HEADER
    include _header
    main.main
        include _sideNav
        .content
            form.form.form__email(action='#')
                .form__group
                    label.form__label(for='title') From
                    input#email_from.form__input(type='email', placeholder='From' value=`${user.email}` disabled)
                .form__group
                    label.form__label(for='to') To
                    input#email_to.form__input(type='email', placeholder='To')
                .form__group
                    label.form__label(for='subject') Subject
                    input#email_subject.form__input(type='text', placeholder='Subject' required)
                .form__group
                    label Attach file
                    input#email_File(type='file', name='filename' required)
                .form__group
                    label.form__label(for='message') Message
                    textarea#email_message.form__textarea(type='text', name='description', cols='30', rows='5', placeholder='Message')
                .form__group
                    button.btn.btn__primary Send